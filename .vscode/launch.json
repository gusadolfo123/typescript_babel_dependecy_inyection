  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "build", // Execute build task
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/public/index.js", // Indicate entry point
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
